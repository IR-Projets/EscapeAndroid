<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/defaultLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_menu"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".LevelsActivity" >

    <LinearLayout
        android:id="@+id/levels_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:gravity="center"
            android:text="@string/levels"
            android:textColor="@android:color/background_dark"
            android:textSize="28sp" />

        <Button
            android:id="@+id/level1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:text="@string/level1" />

        <Button
            android:id="@+id/level2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:text="@string/level"
            android:visibility="invisible" />

        <Button
            android:id="@+id/level3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:text="@string/level"
            android:visibility="invisible" />

        <Button
            android:id="@+id/level4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:text="@string/level"
            android:visibility="invisible" />

        <Button
            android:id="@+id/level5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:text="@string/level"
            android:visibility="invisible" />

        <Button
            android:id="@+id/level6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:text="@string/level"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sub_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionSub"
            android:src="@drawable/moins" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionAddition"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/descriptionSave"
            android:src="@drawable/save" />

    </LinearLayout>

</LinearLayout>